<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.TimerActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_balance_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#0f0f0f"
                    android:text="当前1-10号小车账户余额告警值为"/>
                <TextView
                    android:id="@+id/tv_warning"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="50元"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_setting_title"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="设置1-10号小车账户余额告警值:"/>
        <EditText
            android:id="@+id/et_setting_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1f1e1e"
            android:textSize="20sp"
            android:hint="              "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:textSize="20sp"
            android:text="元"/>

        <Button
            android:id="@+id/btn_setting"
            android:onClick="shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"/>
        </LinearLayout>
</LinearLayout>
