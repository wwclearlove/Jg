<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LukuangActivity">
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/left_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@mipmap/menu"/>

        <TextView

            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="路况查询"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <TextView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="室外空气指数"/>
    <LinearLayout
        android:layout_marginLeft="35dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="PM2.5:"/>
        <TextView
            android:id="@+id/et_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温    度:"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/et_wd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="35dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿    度:"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/et_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="931dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_weight="0.5">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1号道路:"
            android:textSize="25dp"
            android:textStyle="bold"/>

            <TextView
            android:id="@+id/et_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2号道路:"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/et_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3号道路:"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/et_address3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/liner_1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#4c060e "
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/liner_2"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ffff01  "
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/liner_3"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#0ebd12 "
            android:layout_height="match_parent"
            />
    </LinearLayout>






</LinearLayout>